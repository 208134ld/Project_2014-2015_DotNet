
@using p2groep11.Net.Models.Domain
@model p2groep11.Net.ViewModels.ClimateChartViewModel

@{
    ViewBag.Title = "Klimatogram";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script language="JavaScript" type="text/javascript" src="../../Scripts/jquery-2.1.3.js"></script>
<script src="../../Scripts/Highcharts-4.0.1/js/highcharts-all.js" type="text/javascript"></script>
<div class="ClimateChart">@(Model.Chart)</div>

<div class="breadcrumbs">
    @Html.ActionLink("Kies schooljaar", "Index", "SchoolYear") >
    @if (@ViewBag.Schoolyear > 2)
    {
        @Html.ActionLink("Kies continent", "ListContinents", new { @ViewBag.SchoolYear})
        <span>></span>
    }
    @Html.ActionLink("Kies land", "ListCountries", new { Selectedyear = @ViewBag.SchoolYear, continentId = @ViewBag.ContinentId}) >
    @Html.ActionLink("Kies locatie", "ListLocations", new { Selectedyear = @ViewBag.SchoolYear, continentId = @ViewBag.ContinentId, countryId = @ViewBag.CountryId }) >
    @Html.ActionLink("Klimatogram", "ShowClimateChart", new { Selectedyear = @ViewBag.SchoolYear, continentId = @ViewBag.ContinentId, countryId = @ViewBag.CountryId, climateId = @ViewBag.ClimateId }) >
</div>

@(Model.Chart)
<div class="container">
    <div class="ClimateTable">
        <table class="table-condensed">

            <tr>
                <th></th>
                @foreach (Month m in @Model.Months)
                {
                    <th>@m.MonthProp</th>
                }
                <th class="alert">Jaar</th>
            </tr>
            <tr>
                <th>T in °C</th>
                @foreach (Month m in @Model.Months)
                {
                    <th class="alert-danger">@m.AverTemp</th>
                }

                <th>@Html.DisplayFor(modelItem => Model.AvgTemp)</th>
            </tr>
            <tr>
                <th>N in mm</th>
                @foreach (Month m in @Model.Months)
                {
                    <th class="alert-info">@m.Sediment</th>
                }
                <th>@Model.SumSed</th>
            </tr>
        </table>

    </div>

    <div class="determinateResult">
        Klimaatkenmerk: @Model.ResultaatDeterminate[0]<br/>
        Vegetatiekenmerk: @Model.ResultaatDeterminate[1]
    </div>
    <div>
        @Html.Partial("DeterminateTable")
    </div>
</div>
