@model p2groep11.Net.ViewModels.LocationListViewModel

@{
    ViewBag.Title = "Locations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Locations</h2>

<p>
    @*@if (!Model.Locations.Any())
    {
        <div class="noLocations">
            Er zijn geen locaties gevonden voor dit land.
        </div>
    }*@
</p>

<p>
    @using (Html.BeginForm("ListLocations", "Continent", FormMethod.Get))
    {
        <div>
            Locatie: @Html.TextBox("Search")
            <input type="submit" value="Filter" />
        </div>
    }
</p>

<div>
    @foreach (var item in Model.Locations)
    {
        <div>      
            @Html.ActionLink(@item.Location, "ShowClimateChart", "ClimateChart",
            new { SelectedYear = ViewBag.SchoolYear, continentId = item.Country.Continent.ContinentID, countryId = item.Country.CountryID, climateId = item.ClimateChartID }, null)
        </div>
    }
</div>