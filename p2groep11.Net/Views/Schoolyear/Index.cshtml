@model p2groep11.Net.ViewModels.SchoolYearFormViewModel

@{
    ViewBag.Title = "Kies uw schooljaar";
}

<h2>@ViewBag.Title</h2>
<div class="pane">
    @using (Html.BeginForm("Index", "SchoolYear", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedYear)
                @Html.DropDownListFor(model => model.SelectedYear, Model.SchoolYears,
                "--Selecteer een schooljaar--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SelectedYear, "", new { @class = "text-danger" })
        </div>
        
        <div class="form-group">    
            <input type="submit" value="Bevestig" class="btn btn-default" /> 
        </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</div>
